<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bottomsheetbackwhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/astrumlogotype"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/view12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@color/fon"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <ImageView
            android:id="@+id/imgbottrtitle"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toBottomOf="@+id/view12"
            app:srcCompat="@drawable/transactionfeild"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:text="@string/transfer"
            android:fontFamily="@font/fredoka_fonts"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_20"
            app:layout_constraintStart_toEndOf="@+id/imgbottrtitle"
            app:layout_constraintTop_toTopOf="@+id/imgbottrtitle"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_fonts"
            android:layout_marginStart="@dimen/dp_30"
            android:text="@string/connect"
            android:textSize="@dimen/dp_17"
            app:layout_constraintStart_toEndOf="@+id/imgbottrtitle"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_fonts"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/service"
            android:textSize="@dimen/dp_18"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toBottomOf="@+id/imgbottrtitle"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/txtbottrtransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="@font/fredoka_fonts"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/connect"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/dp_18"
            android:fontFamily="@font/fredoka_fonts"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/date_and_time"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toBottomOf="@+id/txtbottrtransfer"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/txtbottrdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/black"
            android:fontFamily="@font/fredoka_fonts"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/connect"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:fontFamily="@font/fredoka_fonts"
            android:textSize="@dimen/dp_18"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/receiver_s_name"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toBottomOf="@+id/txtbottrdate"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/txtbottrfio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_10"
            android:fontFamily="@font/fredoka_fonts"
            android:textColor="@color/black"
            android:text="@string/connect"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/dp_18"
            android:fontFamily="@font/fredoka_fonts"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/receiver_s_wallet"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toBottomOf="@+id/txtbottrfio"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/txtbottrwallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="@font/fredoka_fonts"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:text="@string/connect"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/dp_18"
            android:fontFamily="@font/fredoka_fonts"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/comment"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toBottomOf="@+id/txtbottrwallet"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/txtbottrcoment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="@font/fredoka_fonts"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:text="@string/connect"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/dp_18"
            android:fontFamily="@font/fredoka_fonts"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/status"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toBottomOf="@+id/txtbottrcoment"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/txtbottrstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/fredoka_fonts"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:text="@string/connect"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toBottomOf="@+id/textView19"
            tools:ignore="SpUsage" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtbottrstatus" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>